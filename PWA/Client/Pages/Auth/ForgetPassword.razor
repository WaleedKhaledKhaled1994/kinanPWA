@page "/forgetpassword"
@inject NavigationManager NavigationManager

<div class="login-wrapper d-flex align-items-center justify-content-center text-center">
    <div class="container">
        <img class="big-logo" src="img/core-img/logo-white.png" alt="">
        <!-- Register Form-->
        <div class="register-form mt-5 px-4">
            <form action="http://demo.designing-world.com/suha-v1.3.0/forget-password-success.html" method="post">
                <div class="form-group text-left mb-4">
                    <span>Email or Username</span>
                    <label for="email"><i class="lni-user"></i></label>
                    <input class="form-control" id="email" type="text" placeholder="Designing World">
                </div>
                <button class="btn btn-warning btn-lg w-100" @onclick=@(() => NavigationManager.NavigateTo("forgetPasswordSuccess"))>Reset Password</button>
            </form>
        </div>
    </div>
</div>
